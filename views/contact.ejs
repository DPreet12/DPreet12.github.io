  <section class="contact" id="contact">
      <h2 class="heading">Contact <span>Me!</span></h2>

      <form action="#">
        <div class="input-box">

          <div class="input-field field">
            <input type="text" class="item" id="name" placeholder="Full Name" autocomplete="off">
            <div class="error-txt">Full Name can't be blank</div>
          </div>
  
          <div class="input-field field">
            <input type="text" class="item" id="email" placeholder="Email Address" autocomplete="off">
            <div class="error-txt email">Email Can't be blank</div>
          </div>

        </div>
        
      <div class="input-box">
        <div class="input-field field">
          <input type="number" class="item" id="phone" placeholder="Mobile Number" autocomplete="off">
          <div class="error-txt">Phone number can't be blank</div>
        </div>

        <div class="input-field field">
          <input type="text" class="item" id="subject" placeholder="Email Subject" autocomplete="off">
          <div class="error-txt">Email Can't be blank</div>
        </div>
       </div>
        
        <div class="textarea-field field">

          <textarea name="" id="message" cols="30" rows="10" placeholder="Your Message" class="item" autocomplete="off"></textarea>
      
          <div class="error-txt">Textarea can't be blank</div>
          
        </div>
        <input type="submit" value="Send Message" class="btn">
